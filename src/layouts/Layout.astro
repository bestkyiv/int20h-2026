---
// 1. Import the helper and the image
import { getImage } from "astro:assets";
import textureImage from "../assets/backgrounds/texture.webp";

// 2. Generate the optimized URL (preserves Astro's image compression)
const optimizedBackground = await getImage({
  src: textureImage,
  format: "webp",
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>INT20H Хакатон 2026</title>
    <meta name="generator" content={Astro.generator} />

    {/* 3. Pass the optimized URL to CSS variables */}
    <style define:vars={{ bgUrl: `url("${optimizedBackground.src}")` }}></style>
  </head>

  <body>
    <slot />

    <script>
      // Using 'load' ensures all other assets (CSS, JS, Hero Images) are done first
      window.addEventListener("load", () => {
        document.body.classList.add("bg-loaded");
      });
    </script>
  </body>
</html>

<style>
  /* Base styles (hidden by default) */
  body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* No background-image here initially! */
    background-repeat: repeat;
    opacity: 0; /* Start invisible to prevent flash */
    pointer-events: none;
    z-index: -1;
    transition: opacity 0.5s ease-in; /* Smooth fade-in */
  }

  /* 5. The class that applies the image and reveals it */
  body.bg-loaded::before {
    /* Use the variable from frontmatter */
    background-image: var(--bgUrl);
    opacity: 0.1; /* Your desired opacity */
  }
</style>
