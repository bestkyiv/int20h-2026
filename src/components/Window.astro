---
import React, { type HTMLAttributes } from "react";
import closeHandle from "@/assets/windows/close.webp";
import Image from "astro/components/Image.astro";

const { heading, className, ...props } = Astro.props;
---

<div class="border-4 border-brand-light">
  <div
    class="pl-1 bg-brand-light flex flex-row gap-8 justify-between items-center"
  >
    <p class="uppercase text-brand-dark font-pixelated">{heading}</p>
    <Image class="w-4 h-4" src={closeHandle} alt="Close window" />
  </div>
  <div class={className} {...props}>
    <slot />
  </div>
</div>
